{
    "textarea": {
        "main": {
            "padding": "7px 13px",
            "background": "var(--main-bg-color)",
            "font-weight": "bold",
            "font-size": "14px",
            "border-radius": "var(--main-border-radius)",
            "border": "none",
            "width": "100%",
            "resize": "none",
            "line-height": "24px",
            "&::placeholder": {
                "color": "var(--main-hover-color)"
            },
            "&:focus-visible": {
                "outline": "none",
                "&::placeholder": {
                    "color": "transparent"
                },
                "box-shadow": "inset 0 0 5px var(--secondary-bg-color)"
            }
        }
    }
}