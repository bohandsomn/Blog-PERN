{
    "form": {
        "admin": {
            "display": "flex",
            "flex-direction": "column",
            "align-items": "center",
            "width": "100%",
            "& > *:not(:last-child)": {
                "margin-bottom": "20px"
            }
        },
        "post-updater-container": {
            "background": "var(--secondary-bg-color)",
            "padding": "25px",
            "border-radius": "var(--main-border-radius)",
            "width": "100%"
        },
        "search-post-container": {
            "background": "var(--secondary-bg-color)",
            "padding": "25px",
            "border-radius": "var(--main-border-radius)",
            "& > *:not(:last-child)": {
                "margin-bottom": "20px"
            }
        },
        "create-chat": {
            "& > *:not(:last-child)": {
                "margin-bottom": "20px"
            }
        },
        "update-chat": {
            "& > *:not(:last-child)": {
                "margin-bottom": "20px"
            }
        },
        "send-message-field": {
            "display": "flex",
            "justify-content": "space-between",
            "align-items": "flex-end",
            "& :last-child": {
                "margin-left": "20px",
                "flex": "1"
            }
        },
        "post-creator-container": {
            "background": "var(--secondary-bg-color)",
            "padding": "25px",
            "border-radius": "var(--main-border-radius)"
        }
    }
}